.widget_wrapper
  .widget!= partial("embed_widget", {title: title, widget_url: widget_url, padding: 0})
.links
  h2 Add this to your website:
  p Copy and paste embed code
  input.large(type='text', value="<h1>#{title}</h1><iframe src=\""+hostname + widget_url+"\" />")
  h2 Link to this:
  p Copy and paste
  input.large(type='text', value=hostname + origin_url)
  
script
  inlines.push(function(){
    // change the links into iframes
    $('a.iframe',this).each(function(){
      $this = $(this);
      $this.after($('<iframe>',{
        src:$this.attr('href'),
        style:$this.data('style'),
        scrolling:'no'
      })).hide();
    })
  })