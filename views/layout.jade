!!! 5
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/boilerplate.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body#body
    #content
      #content_inner!= body
    #header
      .left_corner.corner
      .centre
      .right_corner.corner
      a.sector_filter.filter(href=url_with('/filter/SectorCategory'))
        img.text(src='/images/sector_filter_text.png')
        img.button(src='/images/sector_filter.png')
      .main_navigation
        a(href='/') 
          img.button(src='/images/home_button.png')
        a(href='javascript:history.back()') 
          img.button(src='/images/back_button.png')
        a(href='#favourites') 
          img.button(src='/images/favourites_button.png')
    #footer
      .left_corner.corner
      .centre
      .right_corner.corner
      a.funder_filter.filter(href=url_with('/filter/Funder'))
        img.button(src='/images/funder_filter.png')
        img.text.left(src='/images/funder_filter_text.png')
      a.area_filter.filter(href=url_with('/filter/Region'))
        img.button(src='/images/area_filter.png')
        img.text.right(src='/images/area_filter_text.png')
      - if (page == 'activities')
        .activities_navigation
          a(href='#data_file') 
            img.button(src='/images/data_file_button.png')
          a(href='#map') 
            img.button(src='/images/map_button.png')
          a(href='#list') 
            img.button(src='/images/list_button.png')
    #popup.hidden
    #dimmer
    #embed.hidden
      .widget
      .links
        h2 Add this to your website:
        p Copy and paste embed code
        h2 Link to this:
        p Copy and paste
        
    #scripts.hidden
      script(src='/javascripts/jquery.js')
      script(src='/javascripts/jquery.form.min.js')
      script(src='/javascripts/d3.min.js')
      script(src='/javascripts/d3.layout.min.js')
      script(src='/javascripts/jquery.history.js')
      script(src='/javascripts/jquery.transform.min.js')
      script(src='/javascripts/plugins.js')
      script(src='/javascripts/script.js')
