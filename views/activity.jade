section.activity.slide-panel.clearfix
  
  // the params for adding this activity to the dashboard
  - dashParams = JSON.stringify({href:url_with(false,{view:'embed'}), type:'embed', key:'activities', subkey:false})
  aside
    ul
      li: a.icn.favourite(href='#', data-dash=dashParams) Save to my dashboard
      li: a.icn.print(href="#") Print
      li: a.icn.pdf(href="#") PDF
      li: a.icn.csv(href="#") CSV
      
    h3 Related documents 
    ul.related
      li: a.icn.doc(href="#") document title
      li: a.icn.doc(href="#") document title
      li: a.icn.doc(href="#") document title
      
  div.main
    h1= activity.title['#text']
    
    table.headline
      tr
        th Total budget:
        td $<strong>000</strong> million
      tr
        th Allocated to date:
        td $<strong>000</strong> thousand

    .third.left
      .widget!= partial('embed_widget', {locals: {url: url_with('/widgets/project_description', {ID: activity['iati-identifier']}), links: true, padding: 0, width: 210}})
    .third.left
      .widget!= partial('embed_widget', {locals: {url: url_with('/widgets/participating_organisations', {ID: activity['iati-identifier']}), links: true, padding: 0, width: 210}})
    .third.left
      .widget!= partial('embed_widget', {locals: {url: url_with('/widgets/project_sectors', {ID: activity['iati-identifier']}), links: true, padding: 0, width: 210}})
    .third.left
      .widget!= partial('embed_widget', {locals: {url: url_with('/widgets/project_map', {ID: activity['iati-identifier']}), links: true, padding: 0, width: 210}})
    .two_thirds.left
      .widget!= partial('embed_widget', {locals: {url: url_with('/widgets/funding_breakdown', {ID: activity['iati-identifier']}), links: true, padding: 0, width: 210}})


script
  inlines.push(function(){
    contentExit = function(){
      return $('#content_inner').deferredAnimate({marginTop:600}, function(){
        $(this).empty().css({marginTop:0});
      });
    };
    $('.favourite').favourite();
    new Scroller($('section.slide-panel').get(0))
  });
